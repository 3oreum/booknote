<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.booknote.question.mapper.QuestionMapper">
 	<insert id="insertQuestion" parameterType="map">
 		INSERT INTO `question`
 		(
	 		`userId`
			,`title`
			,`content`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{title}
 			, #{content}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectQuestionListByUserId" parameterType="int" resultType="com.booknote.question.domain.Question">
 		SELECT
 			`id`
 			,`userId`
			,`title`
			,`content`
			,`createdAt`
			,`updatedAt`
		FROM
			`question`
		WHERE
			userId = #{userId}
		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectQuestionByUserId" parameterType="map"  resultType="com.booknote.question.domain.Question">
 		SELECT
 			`id`
 			,`userId`
			,`title`
			,`content`
			,`createdAt`
			,`updatedAt`
		FROM
			`question`
		WHERE
			`id` = #{questionId}
			AND
			userId = #{userId}
 	</select>
 </mapper>